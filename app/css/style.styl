@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.main-cont
	center(1200px,10px)

.page
	f()
	fl()
	min-height 100vh

.page--dark
	.content
		background: #f8f8f8
	.header-wrap
		background: #393939
		color white
		a
			color white
			&:hover
				color $mark
	.header-nav__el--red
		&:hover
			color $carrot!important
	.header-top-wrap
		background: #2a2a2a
	.footer-wrap
		color white
		a
			color white
			&:hover
				color $mark
	.footer-top-wrap
		background: #393939
	.footer-main-wrap
		background: #2a2a2a
	.shrink
		box-shadow none

.page--gray
	.content
		background: #f8f8f8
	.footer-top-wrap
		background: white
.content
	+below(768px)
		padding:30px 0
	flex-grow 1
	padding: 50px 0 100px 0
.content--mid
	flex(mid)



// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 20
	bsh()
	.header-top-wrap
		display none
	.header
		+above(1281px)
			padding: 10px 0
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(768px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	width 420px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal--xl
	+below(960px)
		width: 100%
	width 860px

.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(40px)
.modal-content--dark
	background: black
	.modal-title
		color white
	.modal-text
		color white
.modal-img
	margin: 0 auto 20px auto
	flex(mid)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity

.modal-close
	position absolute
	size 60px
	top 0
	right: 0
	flex(mid)
	cp()
	tr()
	background-color $gray-light
	border-radius 0 25px 0 60px
	z-index 30
	&:hover
		background: $gray
	.icon
		size 12px
		margin-top: -5px
		margin-right: -10px


.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	@extend .type--lg
	font-weight: 700

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	@extend .type--sm
	//width: 80%
	line-height: 1.6


.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%

.modal-link
	color $brown
	border-bottom 1px dashed $brown
	display table
	margin: 20px auto 0 auto
	cp()
.modal-link--auth
	margin: 0
	margin-top: -10px
	margin-bottom: 20px
	cp()

// modal === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	bsh()
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// drop
.dropdown
	width: 100%
	display inline-block
	br(35px)
	tr()
	position relative
	border 1px solid $border-color
	outline none!important
	padding: 5px 30px
	height: 60px
	f()
	align-items center
.dropdown-current
	cursor pointer
	display block
	padding 10px
	padding-right 35px
	font-weight: 700
	.icon
		position absolute
		top calc(50% - 6px)
		right 25px
		size 12px
		tr()

.dropdown.active
	border-radius 35px 35px 0 0
	.icon
		transform rotate(180deg)

.dropdown-menu
	position absolute
	background-color #fff
	width calc(100% + 2px)
	left -1px
	top 100%
	margin-top -1px
	border-radius 0 0 10px 10px
	overflow hidden
	display none
	max-height 200px
	overflow-y auto
	z-index 10
	border 1px solid $border-color
.dropdown-menu__el
	padding 15px 35px
	cp()
	tr()
	border-bottom 1px solid $border-color
	//background: #f9f9f9
	&:last-child
		border 0
	&:hover
		background: $snow
		color black
// drop === end


.add
	flex(mid)
	border 1px solid $border-color
	round()
	.icon
		size 10px

.add--sm
	size 24px
	.icon
		size 10px

// slick
// === убираем выделения активности при клик ===
.slick-slide
	&:hover
		outline none!important
	&:active
		outline none!important
	&:focus
		outline none!important
// === убираем выделения активности при клике end ===
 
// === for custom navigation === 
.slider-wrap
	position relative
 
//Навигация снаружи
.slider-wrap--simple
	.slider-control
		round()
		flex(mid)
		tr(all)
		size 40px
		background: white
		position: absolute
		top 50%
		margin-top: -20px
		box-shadow 0px 2px 10px #c5c2c2
		z-index 10
		cp()
		&:hover
			background: $red
			.icon
				fill white
		.icon
			size 14px
	.slider-control--left
		left -20px
	.slider-control--right
		right -20px
//Навигация снаружи end
 
//Навигация внутри
.slider-wrap--inarrow
	.slider-control
		+below(678px)
			display none
		flex(mid)
		tr(all)
		cp()
		round()
		position: absolute
		top 50%
		margin-top: -25px
		z-index 10
		background: white
		opacity: .5
		size 50px
		&:hover
			opacity: 1
		.icon
			size 15px
	.slider-control--left
		left 30px
	.slider-control--right
		right 30px
	.slick-dots
		bottom 30px
//Навигация внутри
// === for custom navigation === 
 
//=== Внешний вид пагинации ===
.slick-dots
	+below(720px)
		bottom -20px
	width: 100%
	display: flex !important
	align-items: center
	justify-content: center
	bottom -50px
	li
		+below(720px)
			size 10px
			flex(mid)
	.dot
		+below(720px)
			flex(mid)
			size 6px
		background: white
		size 15px
		display: block
		opacity: .8
		round()
	.slick-active
		.dot
			opacity: 1

.slick-dotted.slick-slider
	margin-bottom: 0

//=== Внешний вид пагинации end===
 

 
// === Для центрального вида ===
 
.slick-center
	transform: scale(1.2);
	box-shadow 0 18px 32px #a2b8c5
	opacity: 1 !important
 
.name-slider
	.slick-slide
		opacity: .8
	.slick-list
		padding: 100px 80px!important
	.slick-slide
		margin: 0 20px
 
// === Для центрального вида end ===
// slick === end


// main slider
.main-slider__el
	+below(640px)
		padding: 60% 10%
	display: block
	bg-full()
	padding: 16% 10%
	//height: 500px
	width: 100%

.main-slider__el--md
	+below(640px)
		display none
.main-slider__el--sm
	+above(640px)
		display none

.main-slider
	+below(768px)
		margin-bottom: 10px
	margin-bottom: 40px
// main slider === end

// header
//.header-wrap
.header-top-wrap
	+below(1280px)
		display none
	background: $snow
//.main-cont
.header-top
