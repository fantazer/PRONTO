	.footer-top-wrap
		background: #393939
	.footer-main-wrap
		background: #2a2a2a
	.shrink
		box-shadow none
.content
	flex-grow 1
	padding: 30px 0 100px 0
.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 20
	bsh()
	.header-top-wrap
		display none
	.header
		padding: 10px 0
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
