	align-items center
	margin-bottom: 20px
	.icon
		fill $mark
		size 24px
		margin-right: 15px

.header-contact__phone
	@extend .type--md
	color $dark
	white-space nowrap
	font-weight 700
	display inline-block
	margin-bottom: 5px
	&:hover
		color $mark
.header-contact__time
	+below(1560px)
		font-size: 12px
		white-space nowrap
	color $gray
	whtie-space nowrap

