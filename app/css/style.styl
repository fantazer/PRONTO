		height: 100%
		border-left 1px solid $border-color
		padding-left: 5px
	position relative
	f()
	align-items center
	.icon
		+below(640px)
			margin-right: 0
		fill $mark
		margin-right: 15px
		size 30px
.header-cart__cost
	+below(640px)
		display none
	font-weight 700
.header-cart__size
	+below(1280px)
		size 20px
		font-size: 12px
		transform translateY(-10px)
		margin-left: 5px
	+below(640px)
		position absolute
		top 5px
		right: -5px
		transform translateY(0px)
		size 16px
		font-size: 10px
	size 50px
	background: $red
	color white
	flex(mid)
	round()
	margin-left: 10px

.header-menu
	+above(1281px)
		display none
	+below(640px)
		width: auto
		margin-right: 5px
	flex(mid)
	width: 150px
	height: 100%
	border-right 1px solid $border-color
	margin-right: 20px
.header-menu-btn
	+below(1280px)
		width: 100%
		br(0)
		height: 100%
		flex(mid)
	+below(640px)
		padding: 0
		width: 50px
		span
			display none
	@extend .btn--mark
	@extend .btn--md
	f()
	align-items center
	padding: 12px 20px
	line-height: 1
	.icon
		+below(640px)
			margin-right: 0
		fill white
		size 20px
		margin-right: 10px

.header-nav-toggle
	+above(1281px)
		display none
	flex(mid)
	size 50px
	border-left 1px solid $border-color
	.icon
		size 24px
.is-open
	display none

.slide-block-toggle--open
	.is-close
		display none!important
	.is-open
		display block!important
	.header-cart__icon
		.is-close
			display none
// header === end

// slide menu
.slide-block
	+below(1280px)
		top: 50px //Высота хедера
		height: calc(100% - 50px)
	+below(480px)
		width: 100%
	position: fixed
	top 90px
	width: 360px
