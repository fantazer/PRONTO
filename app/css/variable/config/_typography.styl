//  ============================ Typography ============================

//webfont('RUB', 'rouble-webfont', 'normal')
//Add fotn rub write .rub a - (a,b,c,d - change type font)

//font(name,file,size)
font('Nunito','Nunito-Bold',700)
font('Nunito','Nunito-Regular',400)
$v-font =  'Nunito', sans-serif


typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

/*
font-size 12px
@extend .type--xs

font-size 15px
@extend .type--sm

font-size 18px
@extend .type--main

font-size 24px
@extend .type--md

font-size 30px
@extend .type--lg

font-size 40px
@extend .type--xl
*/

.type--xs
	typeSize(12,12)

.type--sm
	typeSize(15,15)

.type--main
	typeSize(18,15)

.type--md
	typeSize(24,18)

.type--lg
	typeSize(36,30)

.type--xl
	typeSize(48,34)

.type--mark
	color $mark

.type--red
	color $red

.type--bold
	font-weight bold

.type--center
	text-align center

.type--gray
	color $gray

.title
	margin-bottom: 30px
	font-weight: 700

.title--sm
	@extend .type--sm

.title--main
	@extend .type--main

.title--md
	@extend .type--md

.title--lg
	@extend .type--lg

.title--xl
	@extend .type--xl

.title--clear
	margin-bottom: 10px
h5
	@extend .type--sm
h4
	@extend .type--main
h3
	@extend .type--md
h2
	@extend .type--lg
h1
	@extend .type--xl

a
	color $link-color
	text-decoration: none
	tr()
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $mark
	&:hover
		color darken($mark,20)
	&:visiter
		color darken($mark,30)

.link--main
	color $link-color
	hover-underline($link-color)
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none


.text
	p
		line-height: 1.6
		margin-bottom: 30px
	ul
		margin-bottom: 30px
		li
			line-height: 1.6
			margin-bottom: 10px
			&:last-child
				margin-bottom: 0

// icons
.icon-row
	f()
	fw()
	align-items center
.icon-row--clear
	flex-wrap nowrap

.icon--sm
	size 16px

.icon--md
	size 24px
.icon--lg
	size 30px
.icon--left
	margin-left: 10px

.icon--right
	margin-right: 10px

.icon--mark
	fill $mark

.icon--red
	fill $carrot

.icon--gray
	fill $gray
// icons === end

// title rows
.title-row
	+below(640px)
		margin-bottom: 30px
		flex-wrap nowrap
		align-items: flex-start
	position: relative
	font-weight: 700
	margin-bottom: 30px
	f()
	fw()
	align-items center
	.icon
		+below(768px)
			size 25px
		tr(all)
		size 50px
		fill $mark
		&:hover
			fill black
	.title
		+below(640px)
			width: 100%
			margin-right: 0
		margin-bottom: 0
		margin-right: 20px
		margin-top: -5px
	.arrow
		+below(640px)
			display none
		fill $mark
		margin-right: 25px
.arrow
	flex(mid)
	round()
	flex(mid)
	tr()
	cp()
	size 50px
	border 2px solid $mark
	&:hover
		background: $mark
		.icon
			fill white
	&:active
		.icon
			fill $red!important
	.icon
		tr()
		size 14px
		fill $mark
.title-row--btn
	+below(768px)
		fw()
	flex(between)
.title-row-info
	+below(768px)
		margin-bottom: 20px
		width: 100%
	f()
	align-items center
// title rows === end
