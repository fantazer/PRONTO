    a(href="#").bread__el Категория
    .bread__el Товар

mixin product(img="item-1.jpg",size)
  .product-el.js-slide-parrent
    .product-el--add
      +icon("cart-empty","icon")
      .product-el--add-val 2
    a(href="#" class = size? "product__img--lg":'').product__img
      .product__img-el(style="background-image:url('img/"+img+"')")
    .product__cont
      a(href="#").product__title Капрічоза
      .product-box
        .product__text Свежеиспечённый ржаной хлеб на молочной закваске с добавлением мёда
      .product-conf
        .product-conf__el.js-slide(data-item="border" )
          +icon("plus","icon")
          span бортик
        .product-conf__el.js-slide(data-item="sauce" )
          +icon("plus","icon")
          span соус
      .size
        .size__el.size__el--active 15 см
        .size__el 30 см
        .size__el 45 см
      .product-footer
        .product-price 250 ₴
        //.product-weight 300 гр
        .item-add
          +incr(false,"incr--single incr--mark-light ")
    .product-slide.js-slide-cont(data-item="border")
      .product-slide-wrap
        .product-slide__close.js-product-slide__close
          +icon("close","icon")
        .product-slide__title Добавить бортик
        form.product-slide__list
          .check-el
            label.style-label.style-label--radio
              input(type="radio" name="border" checked).style-input
              .style-input-element
                .icon-radio
              .style-input-text
                .product-slide__info
                  .product-slide__val Звичайний бортик
                  .product-slide__cost 0 ₴
          .check-el
            label.style-label.style-label--radio
              input(type="radio" name="border" ).style-input
              .style-input-element
                .icon-radio
              .style-input-text
                .product-slide__info
