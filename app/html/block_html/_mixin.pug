                .icon-radio
              .style-input-text
                .product-slide__info
                  .product-slide__val Мисливський бортик
                  .product-slide__cost 34 ₴
    .product-slide.js-slide-cont(data-item="sauce")
      .product-slide-wrap
        .product-slide__close.js-product-slide__close
          +icon("close","icon")
        .product-slide__title Добавить соус
        .product-slide__text соус идёт отдельно от пиццы
        form.product-slide__list
          .product-slide__row
            .type--sm.type--bold Томатний соус <span class="type--gray">/ 50г</span>
            .product-slide__info
              .product-slide__val
                +incr(false,"incr--mark-light incr--sm")
              .product-slide__cost 0 ₴
          .product-slide__row
            .type--sm.type--bold Вершковий соус <span class="type--gray">/ 50г</span>
            .product-slide__info
              .product-slide__val
                +incr(false,"incr--mark-light incr--sm")
              .product-slide__cost 0 ₴
          .product-slide__row
            .type--sm.type--bold Часниковий <span class="type--gray">/ 50г</span>
            .product-slide__info
              .product-slide__val
                +incr(false,"incr--mark-light incr--sm")
