include block_html/_style.pug
include block_html/_include.pug

.page.page--dark
	+header("dark")
	.content
		.main-cont
			+bread()
			//pizza
			.item-wrap
				.item-col
					.item-img(style="background-image:url('img/item-card-1.jpg')")
				// item-info
				.item-info
					.title.title--xl.title--clear Салямі
					.item-descr основа, томатний соус, сир моцарелла, салямі

					// size
					.item-size
						.size.size--mark.size--sm
							.size__el.size__el--active 15 см
							.size__el 30 см
							.size__el 45 см
					// size === end

					// item-config
					.item-config-row
						.title.title--clear Добавим бортик?
						.item-prop
							.item-prop__img(style="background-image:url('img/prop-1.jpg')")
							.item-prop__title Сирний бортик
							.item-prop__cost 29 ₴
						.item-prop
							.item-prop__img(style="background-image:url('img/prop-2.jpg')")
							.item-prop__title Мисливський бортик
							.item-prop__cost 34 ₴
					//  === end

					// item-config
					.item-config-row
						.title.title--clear А соус?
						.item-prop
							.item-prop__img(style="background-image:url('img/prop-3.jpg')")
							.item-prop__title Томатний соус <span class="type--gray">/ 50г</span>
							.item-prop__incr
								+incr(1,"incr--mark incr--mdx")
							.item-prop__cost 29 ₴
						.item-prop
							.item-prop__img(style="background-image:url('img/prop-4.jpg')")
							.item-prop__title Мисливський бортик <span class="type--gray">/ 50г</span>
							.item-prop__incr
								+incr(1,"incr--mark incr--mdx")
							.item-prop__cost 34 ₴
						.item-prop
							.item-prop__img(style="background-image:url('img/prop-5.jpg')")
							.item-prop__title Часниковий <span class="type--gray">/ 50г</span>
							.item-prop__incr
								+incr(1,"incr--mark incr--mdx")
							.item-prop__cost 16 ₴
					//  === end

					// item-config
					.item-config-row
						.title.title--clear Ингридиенты
						- for (var i=0;i<12;i++)
							.ingr-row
								.ingr-name Корнишоны <span class="type--gray">/ 75г</span>
								.ingr-cost 16 ₴
								.ingr-incr
									+incr(false,"incr--single incr--mark-light incr--sm")
								.ingr-total 32 ₴
					//  === end
					.item-condition-wrap
						// item total
						.item-total
							.item-total-wrap
								.item-total__info старая цена 299 ₴
								.item-total__cond
									.item-total__cost 250 ₴
									.item-total__weight 350 г
							.item-get
								.incr-btn.incr-btn--fix
									.incr-btn__el.btn--md.btn--mark Купить
									.incr-btn-wrap
										+incr(1,"incr--mark")
							a(href="#").item-back.icon-row
								+icon("arrow-round-left","icon icon--mark icon--lg icon--right")
								span.type--sm назад в раздел

						// item total === end

						// structure
						.structure-wrap
							.structure
								.structure__el
									.structure__el-name калории
									.structure__el-val 2841
								.structure__el
									.structure__el-name белки
									.structure__el-val 75,4
								.structure__el
									.structure__el-name жиры
									.structure__el-val 111,5
								.structure__el
									.structure__el-name углеводы
									.structure__el-val 198,2
							.structure-text энергетическая ценность указана за 100 г
						// structure === end

				// item-info === end
			// recommend
			.title.title--lg Рекомендуем также
			.product-cont
				- for (var i=0;i< 4;i++)
					+product-sm("item-4.jpg")
			// recommend === end

			// pizza === end
	+footer("dark")
include ./block_html/_script.pug
